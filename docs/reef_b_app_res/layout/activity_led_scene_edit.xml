                android:textColor="@color/text_aaaa"
                app:layout_constraintBottom_toTopOf="@id/sl_warm_white_light"
                app:layout_constraintEnd_toStartOf="@id/tv_warm_white_light"
                app:layout_constraintStart_toStartOf="@id/sl_cold_white_light"
