                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_6"
                android:text="0"
                android:textAppearance="@style/caption1"
                android:textColor="@color/text_aaa"
                app:layout_constraintBottom_toBottomOf="@id/tv_red_light_title"
                app:layout_constraintEnd_toEndOf="@id/sl_green_light"
                app:layout_constraintStart_toEndOf="@id/tv_red_light_title"
                app:layout_constraintTop_toTopOf="@id/tv_red_light_title" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sl_red_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:value="0"
                android:valueFrom="0"
                android:valueTo="100"
                app:labelBehavior="gone"
                app:layout_constraintBottom_toTopOf="@id/tv_cold_white_light_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_red_light_title"
