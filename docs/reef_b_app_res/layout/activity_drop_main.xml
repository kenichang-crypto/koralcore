<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_aaa">

    <include
        android:id="@+id/toolbar_drop_main"
        layout="@layout/toolbar_device"
        app:layout_constraintBottom_toTopOf="@id/layout_drop_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/layout_drop_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_drop_main">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_aaaa"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_4"
                android:paddingBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/rv_drop_head"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/SingleLine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textAppearance="@style/body_accent"
                    android:textColor="@color/text_aaaa"
                    app:layout_constraintBottom_toTopOf="@id/tv_position"
                    app:layout_constraintEnd_toStartOf="@id/btn_ble"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="fnanfisnfisanifoasnifnsafnsaiodnsaiodnas" />

                <ImageView
                    android:id="@+id/btn_ble"
                    style="@style/ImageviewButton"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@drawable/ic_disconnect_background"
                    app:layout_constraintBottom_toBottomOf="@id/tv_position"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_name"
                    app:layout_constraintTop_toTopOf="@id/tv_name" />

                <TextView
                    android:id="@+id/tv_position"
                    style="@style/SingleLine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:textAppearance="@style/caption2"
                    android:textColor="@color/text_aaa"
                    app:layout_constraintEnd_toStartOf="@id/btn_ble"
                    app:layout_constraintStart_toStartOf="@id/tv_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    tools:text="dasdasdsad;saldnaskdmasdmasmdkasmdaklsdsdasdn" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_drop_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_device"
                tools:itemCount="4"
                tools:listitem="@layout/adapter_drop_head" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/progress"
        layout="@layout/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>