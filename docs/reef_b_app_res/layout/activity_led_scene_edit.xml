                app:layout_constraintBottom_toTopOf="@id/tv_royal_blue_light_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_blue_light_title"
