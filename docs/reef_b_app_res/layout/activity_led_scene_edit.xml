                android:textAppearance="@style/caption1"
                android:textColor="@color/text_aaaa"
                app:layout_constraintBottom_toTopOf="@id/sl_red_light"
                app:layout_constraintEnd_toStartOf="@id/tv_red_light"
                app:layout_constraintStart_toStartOf="@id/sl_green_light"
                app:layout_constraintTop_toBottomOf="@id/sl_green_light" />

            <TextView
