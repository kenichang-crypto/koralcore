<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_drop_head_record_setting"
        layout="@layout/toolbar_two_action"
        app:layout_constraintBottom_toTopOf="@id/layout_drop_head_record_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/layout_drop_head_record_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_drop_head_record_setting">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_drop_type_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_16"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                app:layout_constraintBottom_toTopOf="@id/tv_record_type_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_12">

                    <TextView
                        android:id="@+id/tv_drop_type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drop_type"
                        android:textAppearance="@style/body"
                        android:textColor="@color/text_aaa"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_drop_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_drop_type"
                        style="@style/SingleLine"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="end"
                        android:textAppearance="@style/body_accent"
                        android:textColor="@color/text_aaaa"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_drop_type_title"
                        app:layout_constraintTop_toTopOf="@id/tv_drop_type_title"
                        tools:text="asdalsmdlsamdlas;mdd" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_record_type_title"
                style="@style/SingleLine"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:enabled="false"
                android:text="@string/drop_record_type"
                android:textAppearance="@style/caption1"
                app:layout_constraintBottom_toTopOf="@id/btn_record_type"
                app:layout_constraintEnd_toEndOf="@id/layout_drop_type_info"
                app:layout_constraintStart_toStartOf="@id/layout_drop_type_info"
                app:layout_constraintTop_toBottomOf="@id/layout_drop_type_info" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_record_type"
                style="@style/BackgroundMaterialButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_down"
                app:layout_constraintBottom_toTopOf="@id/layout_volume"
                app:layout_constraintEnd_toEndOf="@id/tv_record_type_title"
                app:layout_constraintStart_toStartOf="@id/tv_record_type_title"
                app:layout_constraintTop_toBottomOf="@id/tv_record_type_title"
                tools:text="無設定排程" />

            <LinearLayout
                android:id="@+id/layout_volume"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/tv_run_time_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_record_type">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_record_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintEnd_toEndOf="@id/btn_record_type"
                    app:layout_constraintStart_toStartOf="@id/btn_record_type"
                    app:layout_constraintTop_toBottomOf="@id/btn_record_type">

                    <TextView
                        android:id="@+id/tv_record_time_title"
                        style="@style/SingleLine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:text="@string/drop_record_time"
                        android:textAppearance="@style/body_accent"
                        android:textColor="@color/text_aaaa"
                        app:layout_constraintBottom_toTopOf="@id/rv_time"
                        app:layout_constraintEnd_toStartOf="@id/btn_add_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/btn_add_time"
                        style="@style/ImageviewButton"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:src="@drawable/ic_add_btn"
                        app:layout_constraintBottom_toBottomOf="@id/tv_record_time_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_record_time_title"
                        app:layout_constraintTop_toTopOf="@id/tv_record_time_title" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@color/text_a"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_record_time_title"
                        tools:itemCount="2"
                        tools:listitem="@layout/adapter_drop_custom_record_detail" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_drop_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_drop_volume_title"
                        style="@style/SingleLine"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:text="@string/drop_volume"
                        android:textAppearance="@style/caption1"
                        android:textColor="@color/text_color_selector"
                        app:layout_constraintBottom_toTopOf="@id/layout_drop_volume"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_drop_volume"
                        style="@style/TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        app:layout_constraintBottom_toTopOf="@id/tv_rotating_speed_title"
                        app:layout_constraintEnd_toEndOf="@id/tv_drop_volume_title"
                        app:layout_constraintStart_toStartOf="@id/tv_drop_volume_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_drop_volume_title">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_drop_volume"
                            style="@style/SingleLine"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="1 ~ 500"
                            android:inputType="number"
                            android:textAppearance="@style/body" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_rotating_speed_title"
                        style="@style/SingleLine"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:enabled="false"
                        android:text="@string/drop_head_rotating_speed"
                        android:textAppearance="@style/caption1"
                        app:layout_constraintBottom_toTopOf="@id/btn_rotating_speed"
                        app:layout_constraintEnd_toEndOf="@id/layout_drop_volume"
                        app:layout_constraintStart_toStartOf="@id/layout_drop_volume"
                        app:layout_constraintTop_toBottomOf="@id/layout_drop_volume" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_rotating_speed"
                        style="@style/BackgroundMaterialButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textAlignment="textStart"
                        app:icon="@drawable/ic_down"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tv_rotating_speed_title"
                        app:layout_constraintStart_toStartOf="@id/tv_rotating_speed_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_rotating_speed_title"
                        tools:text="中速" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_run_time_title"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="@string/run_time"
                android:textAppearance="@style/body_accent"
                app:layout_constraintBottom_toTopOf="@id/layout_volume"
                app:layout_constraintEnd_toEndOf="@id/layout_volume"
                app:layout_constraintStart_toStartOf="@id/layout_volume"
                app:layout_constraintTop_toBottomOf="@id/layout_volume" />

            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_24"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_run_time_title"
                app:layout_constraintStart_toStartOf="@id/tv_run_time_title"
                app:layout_constraintTop_toBottomOf="@id/tv_run_time_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="?android:selectableItemBackground">

                    <RadioButton
                        android:id="@+id/rb_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_now"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_now"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:text="@string/run_immediatrly"
                        android:textAppearance="@style/body"
                        app:layout_constraintBottom_toBottomOf="@id/rb_now"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rb_now"
                        app:layout_constraintTop_toTopOf="@id/rb_now" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_drop_days_a_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="?android:selectableItemBackground">

                    <RadioButton
                        android:id="@+id/rb_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/layout_weekday"
                        app:layout_constraintEnd_toStartOf="@id/tv_drop_days_a_week_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_drop_days_a_week_title" />

                    <TextView
                        android:id="@+id/tv_drop_days_a_week_title"
                        style="@style/SingleLine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="@string/drop_days_a_week"
                        android:textAppearance="@style/body"
                        app:layout_constraintBottom_toTopOf="@id/layout_weekday"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/rb_weekly"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/layout_weekday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_drop_days_a_week_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_drop_days_a_week_title">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_sunday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_sunday"
                            app:useMaterialThemeColors="false" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_monday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_monday"
                            app:useMaterialThemeColors="false" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_tuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_tuesday"
                            app:useMaterialThemeColors="false" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_wednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_wednesday"
                            app:useMaterialThemeColors="false" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_thursday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_thursday"
                            app:useMaterialThemeColors="false" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_friday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_friday"
                            app:useMaterialThemeColors="false" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_saturday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@drawable/checkbox_saturday"
                            app:useMaterialThemeColors="false" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_time_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="?android:selectableItemBackground">

                    <RadioButton
                        android:id="@+id/rb_time_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/img_calendar_time_range"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_calendar_time_range"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="@id/rb_time_range"
                        app:layout_constraintEnd_toStartOf="@id/tv_time_range"
                        app:layout_constraintStart_toEndOf="@id/rb_time_range"
                        app:layout_constraintTop_toTopOf="@id/rb_time_range" />

                    <TextView
                        android:id="@+id/tv_time_range"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:textAppearance="@style/caption1"
                        app:layout_constraintBottom_toBottomOf="@id/img_calendar_time_range"
                        app:layout_constraintEnd_toStartOf="@id/img_time_range_more"
                        app:layout_constraintStart_toEndOf="@id/img_calendar_time_range"
                        app:layout_constraintTop_toTopOf="@id/img_calendar_time_range"
                        tools:text="2022-10-14 ~ 2022-10-31" />

                    <ImageView
                        android:id="@+id/img_time_range_more"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/ic_next"
                        app:layout_constraintBottom_toBottomOf="@id/tv_time_range"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_time_range"
                        app:layout_constraintTop_toTopOf="@id/tv_time_range" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_time_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="?android:selectableItemBackground">

                    <RadioButton
                        android:id="@+id/rb_time_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/img_calendar_time_point"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_calendar_time_point"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="@id/rb_time_point"
                        app:layout_constraintEnd_toStartOf="@id/tv_time_point"
                        app:layout_constraintStart_toEndOf="@id/rb_time_point"
                        app:layout_constraintTop_toTopOf="@id/rb_time_point" />

                    <TextView
                        android:id="@+id/tv_time_point"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:textAppearance="@style/caption1"
                        app:layout_constraintBottom_toBottomOf="@id/img_calendar_time_point"
                        app:layout_constraintEnd_toStartOf="@id/img_time_point_more"
                        app:layout_constraintStart_toEndOf="@id/img_calendar_time_point"
                        app:layout_constraintTop_toTopOf="@id/img_calendar_time_point"
                        tools:text="2022-10-14 10:20:13" />

                    <ImageView
                        android:id="@+id/img_time_point_more"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/ic_next"
                        app:layout_constraintBottom_toBottomOf="@id/tv_time_point"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_time_point"
                        app:layout_constraintTop_toTopOf="@id/tv_time_point" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/progress"
        layout="@layout/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>