<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <ImageView
        android:id="@+id/btn_add_sink"
        style="@style/ImageviewButton"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_44"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/ic_add_rounded"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_warning"
        style="@style/ImageviewButton"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_44"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/ic_warning"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_sink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_add_sink" />

    <Spinner
        android:id="@+id/sp_sink_type"
        android:layout_width="@dimen/dp_101"
        android:layout_height="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/transparent"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/img_down"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_sink" />

    <ImageView
        android:id="@+id/img_down"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="@id/btn_sink_manager"
        app:layout_constraintEnd_toStartOf="@id/btn_sink_manager"
        app:layout_constraintStart_toEndOf="@id/sp_sink_type"
        app:layout_constraintTop_toTopOf="@id/btn_sink_manager" />

    <ImageView
        android:id="@+id/btn_sink_manager"
        style="@style/ImageviewButton"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/ic_manager"
        app:layout_constraintBottom_toBottomOf="@id/sp_sink_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sp_sink_type" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_device"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_sink_type"
        tools:listitem="@layout/adapter_sink_with_devices" />

    <LinearLayout
        android:id="@+id/layout_no_device_in_sink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_sink_type">

        <TextView
            style="@style/SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_no_device_in_sink_title"
            android:textAppearance="@style/subheader_accent" />

        <TextView
            style="@style/SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/text_no_device_in_sink_content"
            android:textAppearance="@style/body"
            android:textColor="@color/text_aaa" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>