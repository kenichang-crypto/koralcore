                android:layout_marginStart="@dimen/dp_6"
                android:text="@string/light_cold_white"
                android:textAppearance="@style/caption1"
                android:textColor="@color/text_aaaa"
                app:layout_constraintBottom_toTopOf="@id/sl_cold_white_light"
                app:layout_constraintEnd_toStartOf="@id/tv_cold_white_light"
                app:layout_constraintStart_toStartOf="@id/sl_red_light"
