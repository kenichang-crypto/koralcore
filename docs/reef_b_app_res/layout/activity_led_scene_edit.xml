                app:layout_constraintBottom_toBottomOf="@id/tv_cold_white_light_title"
                app:layout_constraintEnd_toEndOf="@id/sl_red_light"
                app:layout_constraintStart_toEndOf="@id/tv_cold_white_light_title"
