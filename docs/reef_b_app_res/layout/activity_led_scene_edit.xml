                android:textColor="@color/text_aaaa"
                app:layout_constraintBottom_toTopOf="@id/sl_green_light"
                app:layout_constraintEnd_toStartOf="@id/tv_green_light"
                app:layout_constraintStart_toStartOf="@id/sl_royal_blue_light"
                app:layout_constraintTop_toBottomOf="@id/sl_royal_blue_light" />

            <TextView
                android:id="@+id/tv_green_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_6"
                android:text="0"
                android:textAppearance="@style/caption1"
                android:textColor="@color/text_aaa"
                app:layout_constraintBottom_toBottomOf="@id/tv_green_light_title"
                app:layout_constraintEnd_toEndOf="@id/sl_royal_blue_light"
                app:layout_constraintStart_toEndOf="@id/tv_green_light_title"
