<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_aaa">

    <include
        android:id="@+id/toolbar_drop_head_main"
        layout="@layout/toolbar_device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_drop_head_main">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_drop_head_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_drop_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drop_type"
                    android:textAppearance="@style/body"
                    android:textColor="@color/text_aaa"
                    app:layout_constraintBottom_toTopOf="@id/tv_max_drop_title"
                    app:layout_constraintEnd_toStartOf="@id/tv_drop_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_drop_type"
                    style="@style/SingleLine"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="end"
                    android:textAppearance="@style/body_accent"
                    android:textColor="@color/text_aaaa"
                    app:layout_constraintBottom_toBottomOf="@id/tv_drop_type_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_drop_type_title"
                    app:layout_constraintTop_toTopOf="@id/tv_drop_type_title"
                    tools:text="aa" />

                <TextView
                    android:id="@+id/tv_max_drop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:visibility="gone"
                    android:text="@string/max_drop_volume"
                    android:textAppearance="@style/body"
                    android:textColor="@color/text_aaa"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_max_drop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_drop_type_title" />

                <TextView
                    android:id="@+id/tv_max_drop"
                    style="@style/SingleLine"
                    android:layout_width="@dimen/dp_0"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="end"
                    android:textAppearance="@style/body"
                    android:textColor="@color/text_aaaa"
                    app:layout_constraintBottom_toBottomOf="@id/tv_max_drop_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_max_drop_title"
                    app:layout_constraintTop_toTopOf="@id/tv_max_drop_title"
                    tools:text="400 ml" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_record_title"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/record"
            android:textAppearance="@style/body_accent"
            app:layout_constraintEnd_toStartOf="@id/btn_record_more"
            app:layout_constraintStart_toStartOf="@id/layout_drop_head_info"
            app:layout_constraintTop_toBottomOf="@id/layout_drop_head_info" />

        <ImageView
            android:id="@+id/btn_record_more"
            style="@style/ImageviewButton"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@drawable/ic_more_disable"
            app:layout_constraintBottom_toBottomOf="@id/tv_record_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_record_title"
            app:layout_constraintTop_toTopOf="@id/tv_record_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_0"
            app:layout_constraintEnd_toEndOf="@id/btn_record_more"
            app:layout_constraintStart_toStartOf="@id/tv_record_title"
            app:layout_constraintTop_toBottomOf="@id/tv_record_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_today_record_drop_volume_title"
                    style="@style/SingleLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_record_drop_volume"
                    android:textAppearance="@style/body"
                    android:textColor="@color/text_aaaa"
                    app:layout_constraintBottom_toTopOf="@id/divider_1"
                    app:layout_constraintEnd_toStartOf="@id/tv_today_record_drop_volume"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_today_record_drop_volume"
                    style="@style/SingleLine"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="end"
                    android:textAppearance="@style/body_accent"
                    android:textColor="@color/text_aaaa"
                    app:layout_constraintBottom_toBottomOf="@id/tv_today_record_drop_volume_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_today_record_drop_volume_title"
                    app:layout_constraintTop_toTopOf="@id/tv_today_record_drop_volume_title"
                    tools:text="400 ml" />

                <View
                    android:id="@+id/divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="4dp"
                    android:background="@color/bg_press"
                    app:layout_constraintBottom_toTopOf="@id/tv_record_type_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_today_record_drop_volume_title" />

                <TextView
                    android:id="@+id/tv_record_type_title"
                    style="@style/SingleLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/drop_record_type"
                    android:textAppearance="@style/body"
                    android:textColor="@color/text_aaa"
                    app:layout_constraintBottom_toTopOf="@id/rv_record_detail"
                    app:layout_constraintEnd_toStartOf="@id/tv_record_type"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_1" />

                <TextView
                    android:id="@+id/tv_record_type"
                    style="@style/SingleLine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="center"
                    android:textAppearance="@style/body_accent"
                    android:textColor="@color/bg_secondary"
                    app:layout_constraintBottom_toBottomOf="@id/tv_record_type_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_record_type_title"
                    app:layout_constraintTop_toTopOf="@id/tv_record_type_title"
                    tools:text="裝置未連線" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_record_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    app:layout_constraintBottom_toTopOf="@id/layout_mode"
                    app:layout_constraintEnd_toEndOf="@id/tv_record_type"
                    app:layout_constraintStart_toStartOf="@id/tv_record_type_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_record_type_title"
                    tools:itemCount="2"
                    tools:listitem="@layout/adapter_drop_record_detail" />


                <LinearLayout
                    android:id="@+id/layout_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/rv_record_detail"
                    app:layout_constraintStart_toStartOf="@id/rv_record_detail"
                    app:layout_constraintTop_toBottomOf="@id/rv_record_detail">

                    <TextView
                        android:id="@+id/tv_run_cycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/run_cycle"
                        android:textAppearance="@style/body"
                        android:textColor="@color/text_aaa" />

                    <LinearLayout
                        android:id="@+id/layout_weekday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_sunday"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_sunday_unselect" />

                        <ImageView
                            android:id="@+id/img_monday"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_monday_unselect" />

                        <ImageView
                            android:id="@+id/img_tuesday"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_tuesday_unselect" />

                        <ImageView
                            android:id="@+id/img_wednesday"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_wednesday_unselect" />

                        <ImageView
                            android:id="@+id/img_thursday"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_thursday_unselect" />

                        <ImageView
                            android:id="@+id/img_friday"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_friday_unselect" />

                        <ImageView
                            android:id="@+id/img_saturday"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_saturday_unselect" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/caption1"
                        android:textColor="@color/text_aaaa"
                        app:layout_constraintBottom_toBottomOf="@id/layout_weekday"
                        app:layout_constraintStart_toStartOf="@id/layout_weekday"
                        app:layout_constraintTop_toTopOf="@id/layout_weekday"
                        tools:text="2022-10-30 ~ 2022-11-03" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_adjust_title"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/recently_adjust_list"
            android:textAppearance="@style/body_accent"
            app:layout_constraintEnd_toStartOf="@id/btn_adjust_more"
            app:layout_constraintStart_toStartOf="@id/layout_record"
            app:layout_constraintTop_toBottomOf="@id/layout_record" />

        <ImageView
            android:id="@+id/btn_adjust_more"
            style="@style/ImageviewButton"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@drawable/ic_more_disable"
            app:layout_constraintBottom_toBottomOf="@id/tv_adjust_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_adjust_title"
            app:layout_constraintTop_toTopOf="@id/tv_adjust_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_adjust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_0"
            app:layout_constraintEnd_toEndOf="@id/btn_adjust_more"
            app:layout_constraintStart_toStartOf="@id/tv_adjust_title"
            app:layout_constraintTop_toBottomOf="@id/tv_adjust_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_adjust_no_connect"
                    style="@style/SingleLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/device_is_not_connect"
                    android:textAppearance="@style/body_accent"
                    android:textColor="@color/text_aa"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_adjust_connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_low_speed_title"
                        style="@style/SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/low_rotating_speed"
                        android:textAppearance="@style/caption1_accent"
                        android:textColor="@color/bg_secondary"
                        app:layout_constraintBottom_toTopOf="@id/tv_middle_speed_title"
                        app:layout_constraintEnd_toStartOf="@id/tv_low_speed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_low_speed"
                        style="@style/SingleLine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:textAppearance="@style/caption1"
                        android:textColor="@color/text_aaaa"
                        app:layout_constraintBottom_toBottomOf="@id/tv_low_speed_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_low_speed_title"
                        app:layout_constraintTop_toTopOf="@id/tv_low_speed_title"
                        tools:text="@string/no_eng" />

                    <TextView
                        android:id="@+id/tv_middle_speed_title"
                        style="@style/SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/middle_rotating_speed"
                        android:textAppearance="@style/caption1_accent"
                        android:textColor="@color/bg_secondary"
                        app:layout_constraintBottom_toTopOf="@id/tv_high_speed_title"
                        app:layout_constraintEnd_toStartOf="@id/tv_middle_speed"
                        app:layout_constraintStart_toStartOf="@id/tv_low_speed_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_low_speed_title" />

                    <TextView
                        android:id="@+id/tv_middle_speed"
                        style="@style/SingleLine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:textAppearance="@style/caption1"
                        android:textColor="@color/text_aaaa"
                        app:layout_constraintBottom_toBottomOf="@id/tv_middle_speed_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_middle_speed_title"
                        app:layout_constraintTop_toTopOf="@id/tv_middle_speed_title"
                        tools:text="2022-04-09 06:30:25" />

                    <TextView
                        android:id="@+id/tv_high_speed_title"
                        style="@style/SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/high_rotating_speed"
                        android:textAppearance="@style/caption1_accent"
                        android:textColor="@color/bg_secondary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_high_speed"
                        app:layout_constraintStart_toStartOf="@id/tv_middle_speed_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_middle_speed_title" />

                    <TextView
                        android:id="@+id/tv_high_speed"
                        style="@style/SingleLine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:textAppearance="@style/caption1"
                        android:textColor="@color/text_aaaa"
                        app:layout_constraintBottom_toBottomOf="@id/tv_high_speed_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_high_speed_title"
                        app:layout_constraintTop_toTopOf="@id/tv_high_speed_title"
                        tools:text="2022-04-09 06:30:25" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/progress"
        layout="@layout/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>