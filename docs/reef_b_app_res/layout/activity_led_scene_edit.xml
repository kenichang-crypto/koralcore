                android:layout_marginEnd="@dimen/dp_6"
                android:text="0"
                android:textAppearance="@style/caption1"
                android:textColor="@color/text_aaa"
                app:layout_constraintBottom_toBottomOf="@id/tv_blue_light_title"
                app:layout_constraintEnd_toEndOf="@id/sl_purple_light"
                app:layout_constraintStart_toEndOf="@id/tv_blue_light_title"
