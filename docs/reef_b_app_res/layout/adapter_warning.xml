<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_aaaa">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_warning_title"
            style="@style/SingleLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/caption1_accent"
            app:layout_constraintBottom_toTopOf="@id/tv_device_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="故障" />

        <TextView
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textAppearance="@style/caption1"
            app:layout_constraintBottom_toTopOf="@id/txt_clock"
            app:layout_constraintEnd_toStartOf="@id/tv_device_name"
            app:layout_constraintStart_toStartOf="@id/tv_warning_title"
            app:layout_constraintTop_toBottomOf="@id/tv_warning_title"
            tools:text="LED" />

        <TextView
            android:id="@+id/tv_device_name"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:textAppearance="@style/caption1_accent"
            app:layout_constraintBottom_toBottomOf="@id/tv_device_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_device_type"
            app:layout_constraintTop_toTopOf="@id/tv_device_type"
            tools:text="ReefLED90W" />

        <TextView
            android:id="@+id/txt_clock"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/caption1"
            android:textColor="@color/text_aa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_device_name"
            app:layout_constraintStart_toStartOf="@id/tv_device_type"
            app:layout_constraintTop_toBottomOf="@id/tv_device_type"
            tools:text="2022-10-10 12:30:10" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:dividerColor="@color/bg_aaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:dividerColor="@color/bg_press"
        app:layout_constraintBottom_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/divider" />
</androidx.constraintlayout.widget.ConstraintLayout>